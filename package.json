{
    "name": "docker-compose-template",
    "private": true,
    "scripts": {
        "git:commit": "git-cz",
        "prettier": "prettier --check",
        "prettier:fix": "pnpm prettier -- --write",
        "prettier:all": "pnpm prettier -- \"**/*.{html,md,json,yml,yaml,js}\"",
        "prettier:fix:all": "pnpm prettier:all -- --write",
        "lint": "pnpm prettier:all",
        "lint:fix": "pnpm prettier:fix:all",
        "ci": "pnpm lint"
    },
    "config": {
        "commitizen": {
            "path": "cz-customizable"
        },
        "cz-customizable": {
            "config": "./configs/commits/commitizen.js"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g ./configs/commits/commitlint.js",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{html,md,json,yml,yaml,js}": "pnpm prettier:fix"
    },
    "prettier": "./configs/prettier/index.js",
    "devDependencies": {
        "@commitlint/cli": "11.0.0",
        "commitizen": "4.2.1",
        "cz-customizable": "6.3.0",
        "husky": "4.3.0",
        "lint-staged": "10.4.2",
        "prettier": "2.1.2"
    }
}
