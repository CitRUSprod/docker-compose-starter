{
    "name": "docker-compose-template",
    "author": "CitRUS",
    "license": "MIT",
    "private": true,
    "scripts": {
        "git:commit": "git-cz",
        "lerna:install": "lerna bootstrap",
        "prettier": "prettier --check",
        "prettier:fix": "yarn prettier --write",
        "prettier:all": "yarn prettier \"**/*.{html,md,json,yml,yaml,js}\"",
        "prettier:fix:all": "yarn prettier:all --write"
    },
    "lerna": {
        "npmClient": "yarn",
        "packages": [
            "services/*"
        ],
        "version": "0.0.0"
    },
    "config": {
        "commitizen": {
            "path": "cz-customizable"
        },
        "cz-customizable": {
            "config": "./configs/commits/commitizen.js"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g ./configs/commits/commitlint.js",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{html,md,json,yml,yaml,js}": "yarn prettier:fix"
    },
    "prettier": "./configs/prettier/index.js",
    "devDependencies": {
        "@commitlint/cli": "11.0.0",
        "commitizen": "4.2.1",
        "cz-customizable": "6.3.0",
        "husky": "4.3.0",
        "lerna": "3.22.1",
        "lint-staged": "10.4.2",
        "prettier": "2.1.2"
    }
}
